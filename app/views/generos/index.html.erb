<p id="notice"><%= notice %></p>

<h1>Gêneros</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Jogos</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @generos.each do |genero| %>
      <tr>
        <td><%= genero.nome %></td>
 	<% cont = genero.jogos.length-1 %>
	<td><% genero.jogos.each do |jogo| %>
	    <td><a href = "/jogos/<%= jogo.id%>"><img src="data:image/jpg;base64,<%= jogo.imagem %>"></a></td>
	<% end %></td>
        <td><%= link_to 'Show', genero %></td>
        <td><%= link_to 'Edit', edit_genero_path(genero) %></td>
        <td><%= link_to 'Destroy', genero, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

