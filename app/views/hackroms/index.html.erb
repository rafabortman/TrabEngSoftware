<p id="notice"><%= notice %></p>

<h1>Hackroms</h1>

<table>
  <thead>
    <tr>
      <th>Nomerom</th>
      <th>Jogo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hackroms.each do |hackrom| %>
      <tr>
        <td><%= hackrom.nomeRom %></td>
        <td><%= hackrom.jogo.titulo %></td>
        <td><%= link_to 'Show', hackrom %></td>
        <td><%= link_to 'Edit', edit_hackrom_path(hackrom) %></td>
        <td><%= link_to 'Destroy', hackrom, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Hackrom', new_hackrom_path %>
