<%= provide(:title, 'jogos') %>
<p id="notice"><%= notice %></p>

<h1>Jogos</h1>

<table>
  <thead>
    <tr>
      <th>Titulo</th>
      <th>Genero</th>
      <th>Imagem</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jogos.each do |jogo| %>
      <tr>
        <td><%= jogo.titulo %></td>
        <td><%= jogo.genero %></td>
        <td><img src="<%= jogo.imagem %>"></td>
        <td><%= link_to 'Mostrar', jogo %></td>
        <td><%= link_to 'Editar', edit_jogo_path(jogo) %></td>
        <td><%= link_to 'Deletar', jogo, method: :delete, data: { confirm: 'VocÃª tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Jogo', new_jogo_path %>
